rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Permite que qualquer usuário autenticado leia e escreva arquivos no Storage.
      // PARA PRODUÇÃO, você provavelmente vai querer regras mais granulares,
      // por exemplo, para permitir que o usuário escreva apenas na sua própria pasta:
      // match /profilePictures/{userId}/{allPaths=**} {
      //   allow read: if request.auth != null;
      //   allow write: if request.auth != null && request.auth.uid == userId;
      // }
      allow read, write: if request.auth != null;
    }
  }
}
